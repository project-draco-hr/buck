{
  FakeProjectFilesystem projectFilesystem=new FakeProjectFilesystem();
  WriteFileStep writeFileStep=new WriteFileStep("Hello world",Paths.get("foo.txt"),false);
  ExecutionContext executionContext=TestExecutionContext.newBuilder().setProjectFilesystem(projectFilesystem).build();
  writeFileStep.execute(executionContext);
  assertThat(projectFilesystem.readFileIfItExists(Paths.get("foo.txt")),equalTo(Optional.of("Hello world\n")));
}
