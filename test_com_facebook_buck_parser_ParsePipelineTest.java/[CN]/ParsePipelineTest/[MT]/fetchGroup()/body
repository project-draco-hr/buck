{
  try (Fixture fixture=createSynchronousExecutionFixture("groups")){
    final Cell cell=fixture.getCell();
    TargetGroup group=fixture.getTargetGroupParsePipeline().getNode(cell,BuildTargetFactory.newInstance(cell.getFilesystem(),"//:group"));
    TargetNode<?> node=fixture.getTargetNodeParsePipeline().getNode(cell,BuildTargetFactory.newInstance(cell.getFilesystem(),"//:node"));
    assertThat(group.containsTarget(node.getBuildTarget()),is(true));
  }
 }
