{
  String query=WatchmanWatcher.createQuery(new ObjectMapper(),"/path/to/\"repo\"",Optional.<String>absent(),"uuid",Lists.<Path>newArrayList(),Lists.<String>newArrayList(),ImmutableSet.of(Watchman.Capability.DIRNAME));
  assertEquals("[\"query\",\"/path/to/\\\"repo\\\"\",{\"since\":\"n:buckduuid\"," + "\"expression\":[\"not\",[\"anyof\"," + "[\"type\",\"d\"]]],"+ "\"empty_on_fresh_instance\":true,\"fields\":[\"name\",\"exists\",\"new\"]}]",query);
}
