{
  if (!mClient.isConnected()) {
    BuckWSServerPortUtils wsPortUtils=new BuckWSServerPortUtils();
    int port=wsPortUtils.getPort(this.mProject.getBasePath());
    if (port != -1) {
      mClient=new BuckClient(port,mEventHandler);
      this.mClient.connect();
    }
 else {
      BuckToolWindowFactory.outputConsoleMessage(mProject,"Your buck server is turned off.\n" + "It's possible that it can't get a port.\n" + "Try adding to your '.buckconfig.local' file:\n"+ "[httpserver]\n"+ "    port = 0\n"+ "After that press the 'Connect to buck' button.\n",ConsoleViewContentType.ERROR_OUTPUT);
    }
  }
}
