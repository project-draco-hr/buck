def find_module(self, fullname, path=None):
    (_, _, basename) = fullname.rpartition('.')
    try:
        (fd, pypath, (_, _, kind)) = imp.find_module(basename, path)
    except Exception:
        return None
    if hasattr(fd, 'close'):
        fd.close()
    if (kind != imp.PY_SOURCE):
        return None
    if self.matcher.include(pypath):
        self.cov.start()
    else:
        self.cov.stop()
    return None
