{
  final ImmutableSortedSet<BuildRule> depRules=ImmutableSortedSet.copyOf(deps);
  args.deps=Optional.of(depRules);
  args.srcs=Optional.of(FluentIterable.from(srcs.build()).transform(SourcePaths.TO_SOURCE_PATH).toList());
  BuildRuleParams params=new FakeBuildRuleParamsBuilder(target).setDeps(depRules).setType(GenruleDescription.TYPE).setProjectFilesystem(new ProjectFilesystem(Paths.get(".")){
    @Override public Function<Path,Path> getAbsolutifier(){
      return Optional.fromNullable(absolutifier).or(IdentityPathAbsolutifier.getIdentityAbsolutifier());
    }
  }
).build();
  return description.createBuildRule(params,new BuildRuleResolver(),args);
}
