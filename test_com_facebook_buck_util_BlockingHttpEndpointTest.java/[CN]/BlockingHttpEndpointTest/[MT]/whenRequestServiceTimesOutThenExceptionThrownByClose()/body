{
  long start=System.nanoTime();
  BlockingHttpEndpoint endpoint=createBlockingHttpEndpoint();
  endpoint.send(new TestHttpURLConnection(timeoutMillis),"Foo");
  try {
    endpoint.close();
    fail("Endpoint should not shut down successfully.");
  }
 catch (  ShutdownException e) {
    assertThat("Exception should be due to shutdown.",e.getMessage(),Matchers.containsString("failed to shut down"));
  }
  long durationNanos=System.nanoTime() - start;
  long durationMillis=TimeUnit.MILLISECONDS.convert(durationNanos,TimeUnit.NANOSECONDS);
  assertThat("Shutdown should not take a long time.",durationMillis,lessThanOrEqualTo(timeoutMillis * 3));
}
