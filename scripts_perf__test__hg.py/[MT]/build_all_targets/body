def build_all_targets(args, cwd, perftest_side, cache_mode, run_clean=True, dir_cache_only=True, log_as_perftest=True):
    set_perftest_side(args, cwd, perftest_side, cache_mode, dir_cache_only=dir_cache_only)
    targets = []
    for target_str in args.targets_to_build:
        targets.extend(target_str.split(','))
    if run_clean:
        buck_clean(args, cwd)
    return buck_build_target(args, cwd, targets, perftest_side, log_as_perftest=log_as_perftest)
