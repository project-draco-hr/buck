{
  ImmutableSortedSet<Path> reportsToMerge=FluentIterable.from(reportFilesRelativeToProjectRoot).transform(new Function<Path,Path>(){
    @Nullable @Override public Path apply(    Path input){
      return context.getProjectFilesystem().getRootPath().resolve(input);
    }
  }
).toSortedSet(Ordering.natural());
  Path destination=context.getProjectFilesystem().getRootPath().resolve(destinationRelativeToProjectRoot);
  new InferReportMerger(reportsToMerge,destination).merge();
  return 0;
}
