def __init__(self, base_path, dirname, allow_empty_globs, use_watchman_glob, project_root, sync_cookie_state):
    self.globals = {}
    self.includes = set()
    self.base_path = base_path
    self.dirname = dirname
    self.allow_empty_globs = allow_empty_globs
    self.use_watchman_glob = use_watchman_glob
    self.project_root = project_root
    self.sync_cookie_state = sync_cookie_state
    self.rules = {}
