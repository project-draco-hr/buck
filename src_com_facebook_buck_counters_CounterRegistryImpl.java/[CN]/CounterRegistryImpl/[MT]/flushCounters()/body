{
  List<Optional<CounterSnapshot>> snapshots=null;
synchronized (this) {
    snapshots=Lists.newArrayListWithCapacity(counters.size());
    for (    Counter counter : counters) {
      snapshots.add(counter.flush());
    }
  }
  CountersSnapshotEvent event=new CountersSnapshotEvent(ImmutableList.copyOf(Optional.presentInstances(snapshots)));
  eventBus.post(event);
}
