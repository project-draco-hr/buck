{
  ProjectFilesystem filesystem=new FakeProjectFilesystem();
  PrebuiltCxxLibraryBuilder prebuiltCxxLibraryBuilder=new PrebuiltCxxLibraryBuilder(BuildTargetFactory.newInstance("//:r")).setIncludeDirs(ImmutableList.of("include"));
  BuildRuleResolver resolver=new BuildRuleResolver(TargetGraphFactory.newInstance(prebuiltCxxLibraryBuilder.build()),new BuildTargetNodeToBuildRuleTransformer());
  PrebuiltCxxLibrary rule=(PrebuiltCxxLibrary)prebuiltCxxLibraryBuilder.build(resolver,filesystem);
  assertThat(rule.getCxxPreprocessorInput(CxxPlatformUtils.DEFAULT_PLATFORM,HeaderVisibility.PUBLIC).getSystemIncludeRoots(),Matchers.hasItem(filesystem.resolve(rule.getBuildTarget().getBasePath()).resolve("include")));
}
