{
  ProjectFilesystem filesystem=context.getProjectFilesystem();
  boolean exists=filesystem.exists(pathToFile.toString());
  try {
    fileExistsAndIsNotEmpty=TriState.forBooleanValue(exists && filesystem.getFileSize(pathToFile) > 0);
  }
 catch (  IOException e) {
    context.logError(e,"Failed to get size for file: %s.",pathToFile);
    return 1;
  }
  return 0;
}
