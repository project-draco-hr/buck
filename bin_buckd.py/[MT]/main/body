def main():
    with BuckProject.from_current_dir() as project:
        buck_repo = BuckRepo(THIS_DIR, project)
        if ('--help' in sys.argv):
            print('Specify --kill to kill buckd.', file=sys.stderr)
            sys.exit(0)
        buck_repo.kill_buckd()
        if ('--kill' in sys.argv):
            sys.exit(0)
        exit_code = buck_repo.launch_buckd()
        sys.exit(exit_code)
