{
  BuckModule buckModule=e.getProject().getComponent(BuckModule.class);
  buckModule.disconnect();
  BuckKillCommandHandler handler=new BuckKillCommandHandler(e.getProject(),e.getProject().getBaseDir(),BuckCommand.KILL);
  BuckBuildManager.getInstance(e.getProject()).runBuckCommandWhileConnectedToBuck(handler,ACTION_TITLE,buckModule);
}
