{
  BuildRuleResolver resolver=new BuildRuleResolver(TargetGraph.EMPTY,new DefaultTargetNodeToBuildRuleTransformer());
  SourcePathResolver pathResolver=new SourcePathResolver(resolver);
  BuildRule rule=resolver.addToIndex(new FakeBuildRule("//foo:bar",pathResolver));
  assertThat(pathResolver.getSourcePathName(rule.getBuildTarget(),new BuildTargetSourcePath(rule.getBuildTarget(),BuckConstant.getGenPath().resolve("foo").resolve("something.cpp"))),Matchers.equalTo("something.cpp"));
}
