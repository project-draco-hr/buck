{
  PBXGroup resourcesGroup=targetGroup.getOrCreateChildGroupByName("Resources");
  PBXBuildPhase phase=new PBXResourcesBuildPhase();
  target.getBuildPhases().add(phase);
  for (  Path resource : resources) {
    PBXFileReference fileReference=resourcesGroup.getOrCreateFileReferenceBySourceTreePath(SourceTreePath.absolute(projectFilesystem.getFileForRelativePath(resource).toPath()));
    PBXBuildFile buildFile=new PBXBuildFile(fileReference);
    phase.getFiles().add(buildFile);
  }
}
