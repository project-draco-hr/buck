{
  File zipup=folder.newFolder();
  File first=createZip(new File(zipup,"first.zip"),"dir/file1.txt","dir/file2.txt","com/example/Main.class");
  JarDirectoryStep step=new JarDirectoryStep(Paths.get("output.jar"),ImmutableSet.of(Paths.get(first.getName())),"com.example.Main",null,true,ImmutableSet.of(".*2.*"));
  ExecutionContext context=TestExecutionContext.newBuilder().setProjectFilesystem(new ProjectFilesystem(zipup.toPath())).build();
  int returnCode=step.execute(context);
  assertEquals(0,returnCode);
  File zip=new File(zipup,"output.jar");
  assertZipFileCountIs(3,zip);
  assertZipContains(zip,"dir/file1.txt");
  assertZipDoesNotContain(zip,"dir/file2.txt");
}
