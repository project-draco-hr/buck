{
  String extension;
switch (type) {
case ASSEMBLER_WITH_CPP:
    extension="s";
  break;
case C:
extension="i";
break;
case CXX:
extension="ii";
break;
case OBJC:
extension="mi";
break;
case OBJCXX:
extension="mii";
break;
default :
throw new IllegalStateException(String.format("unexpected type: %s",type));
}
return name + "." + extension;
}
