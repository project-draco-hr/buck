{
  return ExecutionContext.builder().setConsole(new TestConsole()).setProjectFilesystem(new ProjectFilesystem(new File(".")){
    @Override public Function<String,Path> getPathRelativizer(){
      return IdentityPathRelativizer.getIdentityRelativizer();
    }
    @Override public Path resolve(    Path path){
      return path;
    }
  }
).setEventBus(BuckEventBusFactory.newInstance()).setPlatform(Platform.LINUX).build();
}
