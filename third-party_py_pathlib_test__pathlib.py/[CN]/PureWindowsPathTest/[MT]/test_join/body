def test_join(self):
    P = self.cls
    p = P('C:/a/b')
    pp = p.joinpath('x/y')
    self.assertEqual(pp, P('C:/a/b/x/y'))
    pp = p.joinpath('/x/y')
    self.assertEqual(pp, P('C:/x/y'))
    pp = p.joinpath('D:x/y')
    self.assertEqual(pp, P('D:x/y'))
    pp = p.joinpath('D:/x/y')
    self.assertEqual(pp, P('D:/x/y'))
    pp = p.joinpath('//host/share/x/y')
    self.assertEqual(pp, P('//host/share/x/y'))
    pp = p.joinpath('c:x/y')
    self.assertEqual(pp, P('C:/a/b/x/y'))
    pp = p.joinpath('c:/x/y')
    self.assertEqual(pp, P('C:/x/y'))
