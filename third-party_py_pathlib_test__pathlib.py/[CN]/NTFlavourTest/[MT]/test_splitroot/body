def test_splitroot(self):
    f = self.flavour.splitroot
    self.assertEqual(f(''), ('', '', ''))
    self.assertEqual(f('a'), ('', '', 'a'))
    self.assertEqual(f('a\\b'), ('', '', 'a\\b'))
    self.assertEqual(f('\\a'), ('', '\\', 'a'))
    self.assertEqual(f('\\a\\b'), ('', '\\', 'a\\b'))
    self.assertEqual(f('c:a\\b'), ('c:', '', 'a\\b'))
    self.assertEqual(f('c:\\a\\b'), ('c:', '\\', 'a\\b'))
    self.assertEqual(f('\\\\a'), ('', '\\', 'a'))
    self.assertEqual(f('\\\\\\a/b'), ('', '\\', 'a/b'))
    self.assertEqual(f('c:\\\\a'), ('c:', '\\', 'a'))
    self.assertEqual(f('c:\\\\\\a/b'), ('c:', '\\', 'a/b'))
    self.assertEqual(f('\\\\a\\b'), ('\\\\a\\b', '\\', ''))
    self.assertEqual(f('\\\\a\\b\\'), ('\\\\a\\b', '\\', ''))
    self.assertEqual(f('\\\\a\\b\\c\\d'), ('\\\\a\\b', '\\', 'c\\d'))
    self.assertEqual(f('\\\\\\a\\b'), ('', '\\', 'a\\b'))
    self.assertEqual(f('\\\\a'), ('', '\\', 'a'))
