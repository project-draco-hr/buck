def test_div_common(self):
    P = self.cls
    p = P('a/b')
    pp = (p / 'c')
    self.assertEqual(pp, P('a/b/c'))
    self.assertIs(type(pp), type(p))
    pp = (p / 'c/d')
    self.assertEqual(pp, P('a/b/c/d'))
    pp = ((p / 'c') / 'd')
    self.assertEqual(pp, P('a/b/c/d'))
    pp = (('c' / p) / 'd')
    self.assertEqual(pp, P('c/a/b/d'))
    pp = (p / P('c'))
    self.assertEqual(pp, P('a/b/c'))
    pp = (p / '/c')
    self.assertEqual(pp, P('/c'))
