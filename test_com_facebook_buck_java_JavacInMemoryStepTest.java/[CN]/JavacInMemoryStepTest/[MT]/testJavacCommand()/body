{
  ExecutionContext context=TestExecutionContext.newInstance();
  JavacInMemoryStep firstOrder=createTestStep(BuildDependencies.FIRST_ORDER_ONLY);
  JavacInMemoryStep warn=createTestStep(BuildDependencies.WARN_ON_TRANSITIVE);
  JavacInMemoryStep transitive=createTestStep(BuildDependencies.TRANSITIVE);
  assertEquals(String.format("javac -source %s -target %s -g -d . -classpath foo.jar @%s",TARGETED_JAVA_VERSION,TARGETED_JAVA_VERSION,PATH_TO_SRCS_LIST),firstOrder.getDescription(context));
  assertEquals(String.format("javac -source %s -target %s -g -d . -classpath foo.jar @%s",TARGETED_JAVA_VERSION,TARGETED_JAVA_VERSION,PATH_TO_SRCS_LIST),warn.getDescription(context));
  assertEquals(String.format("javac -source %s -target %s -g -d . -classpath bar.jar%sfoo.jar @%s",TARGETED_JAVA_VERSION,TARGETED_JAVA_VERSION,File.pathSeparator,PATH_TO_SRCS_LIST),transitive.getDescription(context));
}
