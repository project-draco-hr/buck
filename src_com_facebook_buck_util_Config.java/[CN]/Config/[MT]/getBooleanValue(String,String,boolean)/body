{
  Map<String,String> entries=get(sectionName);
  if (!entries.containsKey(propertyName)) {
    return defaultValue;
  }
  String answer=Preconditions.checkNotNull(entries.get(propertyName));
switch (answer.toLowerCase()) {
case "yes":
case "true":
    return true;
case "no":
case "false":
  return false;
default :
throw new HumanReadableException("Unknown value for %s in [%s]: %s; should be yes/no true/false!",propertyName,sectionName);
}
}
