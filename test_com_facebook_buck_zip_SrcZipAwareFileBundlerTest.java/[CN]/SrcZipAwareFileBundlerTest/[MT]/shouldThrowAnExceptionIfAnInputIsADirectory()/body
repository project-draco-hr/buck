{
  ProjectFilesystem filesystem=FakeProjectFilesystem.createJavaOnlyFilesystem();
  Path src=filesystem.getRootPath().resolve("src");
  Path dest=filesystem.getRootPath().resolve("dest");
  Files.createDirectories(src);
  Files.createDirectories(dest);
  SrcZipAwareFileBundler bundler=new SrcZipAwareFileBundler(filesystem.getRootPath());
  bundler.copy(filesystem,new SourcePathResolver(new BuildRuleResolver()),ImmutableList.<Step>builder(),dest,ImmutableSet.<SourcePath>of(new FakeSourcePath("src")),false);
}
