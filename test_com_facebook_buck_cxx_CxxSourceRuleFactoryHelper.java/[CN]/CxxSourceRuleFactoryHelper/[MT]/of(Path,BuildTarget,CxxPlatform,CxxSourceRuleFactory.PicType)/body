{
  BuildRuleResolver resolver=new BuildRuleResolver(TargetGraph.EMPTY,new BuildTargetNodeToBuildRuleTransformer());
  return CxxSourceRuleFactory.builder().setParams(new FakeBuildRuleParamsBuilder(target).setProjectFilesystem(new FakeProjectFilesystem(cellRoot.toFile())).build()).setResolver(resolver).setPathResolver(new SourcePathResolver(resolver)).setCxxPlatform(cxxPlatform).setPicType(picType).build();
}
