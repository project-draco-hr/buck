{
  try {
    if (shouldRecurse) {
      context.getProjectFilesystem().copyFolder(source,destination);
    }
 else {
      context.getProjectFilesystem().copyFile(source,destination);
    }
    return 0;
  }
 catch (  IOException e) {
    context.logError(e,"Failed when trying to copy: %s",getDescription(context));
    return 1;
  }
}
