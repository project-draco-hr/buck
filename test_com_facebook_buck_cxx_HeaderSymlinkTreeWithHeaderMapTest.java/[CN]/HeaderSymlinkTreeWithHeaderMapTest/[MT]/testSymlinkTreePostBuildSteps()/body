{
  BuildContext buildContext=FakeBuildContext.NOOP_CONTEXT;
  ProjectFilesystem filesystem=new FakeProjectFilesystem();
  FakeBuildableContext buildableContext=new FakeBuildableContext();
  SourcePathResolver resolver=new SourcePathResolver(new BuildRuleResolver(TargetGraph.EMPTY,new DefaultTargetNodeToBuildRuleTransformer()));
  ImmutableList<Step> expectedBuildSteps=ImmutableList.of(new MakeCleanDirectoryStep(filesystem,symlinkTreeRoot),new SymlinkTreeStep(filesystem,symlinkTreeRoot,resolver.getMappedPaths(links)),new HeaderMapStep(filesystem,headerMapPath,ImmutableMap.of(Paths.get("file"),filesystem.resolve(BuckConstant.getBuckOutputPath()).relativize(symlinkTreeRoot).resolve("file"),Paths.get("directory/then/file"),filesystem.resolve(BuckConstant.getBuckOutputPath()).relativize(symlinkTreeRoot).resolve("directory/then/file"))));
  ImmutableList<Step> actualBuildSteps=symlinkTreeBuildRule.getPostBuildSteps(buildContext,buildableContext);
  assertEquals(expectedBuildSteps,actualBuildSteps.subList(1,actualBuildSteps.size()));
}
