{
  return ExecutionContext.builder().setConsole(new Console(Verbosity.SILENT,System.out,System.err,Ansi.withoutTty())).setProjectFilesystem(new ProjectFilesystem(new File(".")){
    @Override public Function<String,String> getPathRelativizer(){
      return Functions.identity();
    }
    @Override public Path resolve(    Path path){
      return path;
    }
  }
).setEventBus(BuckEventBusFactory.newInstance()).setPlatform(platform).build();
}
