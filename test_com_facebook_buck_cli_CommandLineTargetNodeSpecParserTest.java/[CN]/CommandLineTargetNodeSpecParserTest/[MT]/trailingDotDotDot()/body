{
  assertEquals(TargetNodePredicateSpec.of(Predicates.alwaysTrue(),BuildFileSpec.fromRecursivePath(Paths.get("hello").toAbsolutePath())),PARSER.parse(createCellRoots(null),"//hello/..."));
  assertEquals(TargetNodePredicateSpec.of(Predicates.alwaysTrue(),BuildFileSpec.fromRecursivePath(Paths.get("").toAbsolutePath())),PARSER.parse(createCellRoots(null),"//..."));
  assertEquals(TargetNodePredicateSpec.of(Predicates.alwaysTrue(),BuildFileSpec.fromRecursivePath(Paths.get("").toAbsolutePath())),PARSER.parse(createCellRoots(null),"..."));
  assertEquals(BuildTargetSpec.from(BuildTargetFactory.newInstance("//hello:...")),PARSER.parse(createCellRoots(null),"//hello:..."));
}
