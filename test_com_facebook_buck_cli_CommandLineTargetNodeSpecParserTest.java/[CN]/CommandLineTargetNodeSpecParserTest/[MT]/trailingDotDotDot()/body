{
  assertEquals(TargetNodePredicateSpec.of(Predicates.alwaysTrue(),BuildFileSpec.fromRecursivePath(Paths.get("hello"))),PARSER.parse("//hello/..."));
  assertEquals(TargetNodePredicateSpec.of(Predicates.alwaysTrue(),BuildFileSpec.fromRecursivePath(Paths.get(""))),PARSER.parse("//..."));
  assertEquals(TargetNodePredicateSpec.of(Predicates.alwaysTrue(),BuildFileSpec.fromRecursivePath(Paths.get(""))),PARSER.parse("..."));
  assertEquals(BuildTargetSpec.from(BuildTargetFactory.newInstance("//hello:...")),PARSER.parse("//hello:..."));
}
