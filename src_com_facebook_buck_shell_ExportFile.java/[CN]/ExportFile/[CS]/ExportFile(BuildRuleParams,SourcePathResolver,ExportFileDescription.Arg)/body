{
  super(params,resolver);
  BuildTarget target=params.getBuildTarget();
  this.name=args.out.or(target.getShortNameAndFlavorPostfix());
  if (args.src.isPresent()) {
    this.src=args.src.get();
  }
 else {
    this.src=new PathSourcePath(params.getProjectFilesystem(),target.getBasePath().resolve(target.getShortNameAndFlavorPostfix()));
  }
  this.out=getProjectFilesystem().getBuckPaths().getGenDir().resolve(target.getBasePath()).resolve(this.name);
}
