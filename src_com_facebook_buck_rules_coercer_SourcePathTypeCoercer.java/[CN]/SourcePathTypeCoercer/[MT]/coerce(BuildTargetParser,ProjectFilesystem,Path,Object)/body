{
  if ((object instanceof String) && (((String)object).startsWith("//") || ((String)object).startsWith(":"))) {
    BuildTarget buildTarget=buildTargetTypeCoercer.coerce(buildTargetParser,filesystem,pathRelativeToProjectRoot,object);
    return new BuildTargetSourcePath(buildTarget);
  }
 else {
    Path path=pathTypeCoercer.coerce(buildTargetParser,filesystem,pathRelativeToProjectRoot,object);
    return new PathSourcePath(path);
  }
}
