{
  final Command tool;
  if ("run".equals(name))   tool=new runCommand(usageName,args);
 else   if ("instr".equals(name))   tool=new instrCommand(usageName,args);
 else   if ("report".equals(name))   tool=new reportCommand(usageName,args);
 else   if ("merge".equals(name))   tool=new mergeCommand(usageName,args);
 else   throw new IllegalArgumentException("unknown command: [" + name + "]");
  tool.initialize();
  return tool;
}
