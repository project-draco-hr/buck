{
  scheduledThreadPoolExecutor=new ScheduledThreadPoolExecutor(1,new ThreadFactory(){
    @Override public Thread newThread(    Runnable r){
      return new Thread(r,"ideabuck keep alive");
    }
  }
);
  mWSSocket=new BuckSocket(new BuckEventHandlerInterface(){
    @Override public void onConnect(){
      handler.onConnect();
      BuckClient.this.mConnected=true;
    }
    @Override public void onDisconnect(){
      handler.onDisconnect();
      BuckClient.this.mConnected=false;
    }
    @Override public void onMessage(    String message){
synchronized (syncObject) {
        BuckClient.this.mLastActionTime=(new Date()).getTime();
      }
      handler.onMessage(message);
    }
  }
);
  mHost=host;
  mPort=port;
}
