{
  ArtifactCacheBuckConfig config=createFromText("[cache]","serve_local_cache = true","dir = /cache_dir");
  assertThat(config.getServedLocalCache(),Matchers.equalTo(Optional.of(DirCacheEntry.builder().setMaxSizeBytes(Optional.<Long>absent()).setCacheDir(Paths.get("/cache_dir")).setCacheReadMode(ArtifactCacheBuckConfig.CacheReadMode.readonly).build())));
  config=createFromText("[cache]","serve_local_cache = true","dir = /cache_dir","dir_mode = readwrite","dir_max_size = 42b");
  assertThat(config.getServedLocalCache(),Matchers.equalTo(Optional.of(DirCacheEntry.builder().setMaxSizeBytes(Optional.of(42L)).setCacheDir(Paths.get("/cache_dir")).setCacheReadMode(ArtifactCacheBuckConfig.CacheReadMode.readonly).build())));
}
