{
  ProjectFilesystem projectFilesystem=new FakeProjectFilesystem();
  SourcePathResolver pathResolver=new SourcePathResolver(new BuildRuleResolver());
  BuildTarget target=BuildTargetFactory.newInstance("//foo/bar:baz");
  FakeBuildRule rule=new FakeBuildRule(BuildRuleType.of("example"),target,pathResolver);
  Path path=Paths.get("blah");
  BuildTargetSourcePath buildTargetSourcePath=new BuildTargetSourcePath(projectFilesystem,rule.getBuildTarget(),path);
  assertEquals(target,buildTargetSourcePath.getTarget());
  assertEquals(path,pathResolver.getPath(buildTargetSourcePath));
}
