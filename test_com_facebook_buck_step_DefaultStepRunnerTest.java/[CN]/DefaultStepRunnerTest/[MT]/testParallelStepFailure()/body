{
  ImmutableList.Builder<Step> steps=ImmutableList.builder();
  steps.add(new SleepingStep(0,0));
  steps.add(new SleepingStep(10,1));
  steps.add(new SleepingStep(5000,1));
  ExecutionContext context=ExecutionContext.builder().setProjectFilesystem(createMock(ProjectFilesystem.class)).setConsole(new TestConsole()).setEventBus(BuckEventBusFactory.newInstance()).setPlatform(Platform.detect()).build();
  DefaultStepRunner runner=new DefaultStepRunner(context,3);
  runner.runStepsInParallelAndWait(steps.build());
}
