{
  FileSystem vfs=Jimfs.newFileSystem(Configuration.unix());
  Path fakeTmpDir=vfs.getPath("/tmp/fake-tmp-dir");
  assertThat(Files.exists(fakeTmpDir),is(false));
  try (TempDirectoryCreator tempDirectoryCreator=new TempDirectoryCreator(Optional.of(fakeTmpDir))){
    assertThat(Files.exists(fakeTmpDir),is(true));
  }
   assertThat(Files.exists(fakeTmpDir),is(false));
}
