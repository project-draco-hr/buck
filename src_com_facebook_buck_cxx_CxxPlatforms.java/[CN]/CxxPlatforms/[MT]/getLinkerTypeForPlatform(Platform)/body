{
switch (platform) {
case LINUX:
    return CxxPlatform.LinkerType.GNU;
case MACOS:
  return CxxPlatform.LinkerType.DARWIN;
case WINDOWS:
return CxxPlatform.LinkerType.WINDOWS;
default :
throw new HumanReadableException("cannot detect linker type, try explicitly setting it in " + ".buckconfig's [cxx] ld_type section");
}
}
