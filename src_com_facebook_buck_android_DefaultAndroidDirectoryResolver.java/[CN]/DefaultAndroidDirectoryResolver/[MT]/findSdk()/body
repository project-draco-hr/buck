{
  Optional<Path> sdkPath=propertyFinder.findDirectoryByPropertiesThenEnvironmentVariable("sdk.dir","ANDROID_SDK","ANDROID_HOME");
  if (sdkPath.isPresent() && !sdkPath.get().toFile().isDirectory()) {
    throw new HumanReadableException("Android SDK path (" + sdkPath.get() + ") "+ "is not a directory.");
  }
  return sdkPath;
}
