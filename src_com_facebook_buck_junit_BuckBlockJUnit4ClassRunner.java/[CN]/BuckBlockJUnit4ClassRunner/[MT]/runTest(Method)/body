{
  Description description=Description.createTestDescription(getTestClass().getJavaClass(),testMethod.getName(),testMethod.getAnnotations());
  Filter singleMethodFilter=Filter.matchMethodDescription(description);
  filter(singleMethodFilter);
  Result result=new Result();
  RunListener listener=result.createListener();
  RunNotifier runNotifier=new RunNotifier();
  runNotifier.addFirstListener(listener);
  try {
    runNotifier.fireTestRunStarted(description);
    run(runNotifier);
    runNotifier.fireTestRunFinished(result);
  }
  finally {
    runNotifier.removeListener(listener);
  }
  return result;
}
