{
  if ((parentDir == null) || !parentDir.exists())   throw new IllegalArgumentException("invalid parent directory: [" + parentDir + "]");
  if ((prefix == null) || (prefix.length() < 3))   throw new IllegalArgumentException("null or less than 3 chars long: " + prefix);
  if (extension == null)   extension=".tmp";
 else   if (extension.charAt(0) != '.')   extension=".".concat(extension);
  return File.createTempFile(prefix,extension,parentDir);
}
