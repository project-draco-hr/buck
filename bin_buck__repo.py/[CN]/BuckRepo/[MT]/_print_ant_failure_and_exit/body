def _print_ant_failure_and_exit(self, ant_log_path):
    print(textwrap.dedent("                ::: 'ant' failed in the buck repo at {0}.\n                ::: Check the logs at {1}.".format(self._buck_dir, ant_log_path)), file=sys.stderr)
    if self._is_git:
        raise BuckRepoException(textwrap.dedent('                ::: Try running: git -C "{0}" clean -xfd'.format(self._buck_dir)))
    else:
        raise BuckRepoException(textwrap.dedent('                ::: Try running: rm -rf "{0}"/build'.format(self._buck_dir)))
