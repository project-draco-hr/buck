def _print_ant_failure_and_exit(self):
    print("::: 'ant' failed in the buck repo at {}.".format(self._buck_dir), file=sys.stderr)
    if self._is_git:
        raise BuckRepoException(textwrap.dedent("                ::: Try changing to that directory and running\n                'git clean -xfd'."))
    else:
        raise BuckRepoException(textwrap.dedent("                ::: Try changing to that directory and deleting the\n                'build' directory."))
