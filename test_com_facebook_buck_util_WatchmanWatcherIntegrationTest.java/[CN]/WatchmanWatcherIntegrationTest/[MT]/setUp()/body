{
  Files.write(tmp.getRootPath().resolve(".watchmanconfig"),new byte[0]);
  watchman=Watchman.build(tmp.getRootPath(),ImmutableMap.copyOf(System.getenv()),new Console(Verbosity.ALL,System.out,System.err,Ansi.withoutTty()),new DefaultClock());
  assumeTrue(watchman.getWatchmanClient().isPresent());
  eventBus=new EventBus();
  watchmanEventCollector=new WatchmanEventCollector();
  eventBus.register(watchmanEventCollector);
}
