{
  if (isKilled.get()) {
    return Optional.absent();
  }
  try {
    return Optional.of(keyspaceAndTtlFuture.get(timeoutSeconds,TimeUnit.SECONDS));
  }
 catch (  TimeoutException e) {
    keyspaceAndTtlFuture.cancel(true);
    isKilled.set(true);
  }
catch (  ExecutionException e) {
    if (!(e instanceof ExecutionException) || !(e.getCause() instanceof ConnectionException)) {
      buckEventBus.post(ThrowableLogEvent.create(e,"Unexpected error when fetching keyspace and ttl: %s.",e.getMessage()));
    }
  }
catch (  CancellationException e) {
    return Optional.absent();
  }
  return Optional.absent();
}
