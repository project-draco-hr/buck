def get_actool_env_path(platform):
    platform = ('iPhoneSimulator' if (platform == 'iphonesimulator') else 'iPhoneOS')
    xcode_path = get_xcode_path()
    return ':'.join([os.path.join(xcode_path, 'Platforms', (platform + '.platform'), 'Developer/usr/bin/actool'), os.path.join(xcode_path, 'usr/bin'), '/usr/bin', '/bin', '/usr/sbin', '/sbin'])
