def relpath(path, start=os.path.curdir):
    '\n    Return a relative filepath to path from the current directory or an\n    optional start point.\n    '
    if (not path):
        raise ValueError('no path specified')
    start_list = os.path.abspath(start).split(os.path.sep)
    path_list = os.path.abspath(path).split(os.path.sep)
    common = len(os.path.commonprefix([start_list, path_list]))
    rel_list = (([os.path.pardir] * (len(start_list) - common)) + path_list[common:])
    if (not rel_list):
        return os.path.curdir
    return os.path.join(*rel_list)
