def passes_glob_filter(path, inclusions, exclusions):
    "Checks path against inclusion and exclusion regexes.\n\n  Returns False if the path contains any components which\n  start with a dot (mimicking the behavior of glob()).\n\n  Returns False if the path matches any compiled regex\n  in the list 'exclusions'.\n\n  Otherwise, returns True if the path matches any compiled\n  regex in the list 'inclusions', or False if it does not."
    for component in splitpath(path):
        if ((len(component) > 1) and component.startswith('.')):
            return False
    for exclusion in exclusions:
        if exclusion.match(path):
            return False
    for inclusion in inclusions:
        if inclusion.match(path):
            return True
    return False
