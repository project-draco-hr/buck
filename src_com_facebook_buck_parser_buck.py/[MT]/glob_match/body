def glob_match(pattern, path, include_dotfiles=False):
    "Checks if a given (non necessarily existing) path matches a 'pattern'.\n\n    Patterns can include the same special tokens as glob_walk.\n    Paths and patterns are seen as a list of path elements delimited by '/'.\n    E.g. '/' does not match '', but '*' does.\n    "
    tokens = split_path(pattern)
    chunks = split_path(path)
    return glob_match_internal(include_dotfiles, tokens, chunks)
