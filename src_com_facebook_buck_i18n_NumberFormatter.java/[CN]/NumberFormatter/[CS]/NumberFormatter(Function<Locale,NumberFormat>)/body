{
  numberFormatCache=CacheBuilder.newBuilder().build(new CacheLoader<Locale,BlockingQueue<NumberFormat>>(){
    @Override public BlockingQueue<NumberFormat> load(    Locale locale) throws Exception {
      List<NumberFormat> numberFormats=new ArrayList<>();
      int capacity=Runtime.getRuntime().availableProcessors();
      for (int i=0; i < capacity; i++) {
        numberFormats.add(numberFormatCreator.apply(locale));
      }
      return new ArrayBlockingQueue<>(capacity,false,numberFormats);
    }
  }
);
}
