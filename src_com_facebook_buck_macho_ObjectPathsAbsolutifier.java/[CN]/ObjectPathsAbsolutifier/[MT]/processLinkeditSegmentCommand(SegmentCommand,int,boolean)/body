{
  UnsignedLong updatedFileSize=original.getFilesize().plus(UnsignedLong.valueOf(stringTableSizeIncrease));
  UnsignedLong updatedVmSize=UnsignedLong.fromLongBits(SegmentCommandUtils.alignValue(original.getVmsize().intValue() + stringTableSizeIncrease));
  SegmentCommand updated=original.withFilesize(updatedFileSize).withVmsize(updatedVmSize);
  SegmentCommandUtils.updateSegmentCommand(buffer,original,updated,is64Bit);
}
