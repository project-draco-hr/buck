@classmethod
def _site_libs(cls):
    try:
        from site import getsitepackages
        site_libs = set(getsitepackages())
    except ImportError:
        site_libs = set()
    site_libs.update([sysconfig.get_python_lib(plat_specific=False), sysconfig.get_python_lib(plat_specific=True)])
    return site_libs
