{
  if (value instanceof BuildTarget) {
    return (BuildTarget)value;
  }
  Preconditions.checkArgument(value instanceof String,"Expected argument '%s' to be a build target",value);
  String param=(String)value;
  int colon=param.indexOf(':');
  if (colon == 0 && param.length() > 1) {
    return new BuildTarget(BUILD_TARGET_PREFIX + pathRelativeToProjectRoot.toString(),param.substring(1));
  }
 else   if (colon > 0 && param.length() > 2) {
    return new BuildTarget(param.substring(0,colon),param.substring(colon + 1));
  }
  return null;
}
