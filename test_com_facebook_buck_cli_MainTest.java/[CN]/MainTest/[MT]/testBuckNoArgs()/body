{
  CapturingPrintStream stdErr=new CapturingPrintStream();
  Main main=new Main(stdOut,stdErr);
  int exitCode=main.runMainWithExitCode(new BuildId(),Paths.get("."),Optional.<NGContext>absent(),ImmutableMap.<String,String>of());
  assertEquals(1,exitCode);
  assertEquals("When the user does not specify any arguments, the usage information should be displayed",getUsageString(),stdErr.getContentsAsString(Charsets.US_ASCII));
}
