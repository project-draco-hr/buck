{
  ProjectFilesystem projectFilesystem=new ProjectFilesystem(Paths.get(".").toAbsolutePath());
  DefaultAndroidDirectoryResolver resolver=new DefaultAndroidDirectoryResolver(projectFilesystem,Optional.<String>absent(),Optional.<String>absent(),new DefaultPropertyFinder(projectFilesystem,ImmutableMap.copyOf(System.getenv())));
  Optional<Path> ndkDir=resolver.findAndroidNdkDir();
  assertTrue(ndkDir.isPresent());
  assertTrue(java.nio.file.Files.exists(ndkDir.get()));
  return ndkDir.get();
}
