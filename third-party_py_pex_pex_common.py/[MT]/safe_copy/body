def safe_copy(source, dest, overwrite=False):

    def do_copy():
        temp_dest = (dest + uuid4().hex)
        shutil.copyfile(source, temp_dest)
        os.rename(temp_dest, dest)
    try:
        os.link(source, dest)
    except OSError as e:
        if (e.errno == errno.EEXIST):
            if overwrite:
                do_copy()
        elif (e.errno == errno.EXDEV):
            do_copy()
        else:
            raise
