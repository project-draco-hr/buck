{
  ShellStep command=createCommand(ENV,ARGS,null);
  ExecutionContext context=TestExecutionContext.newBuilder().setProcessExecutor(new FakeProcessExecutor()).build();
  assertEquals(String.format("(cd %s && V1='two words' V2='$foo'\\''bar'\\''' bash -c 'echo $V1 $V2')",Escaper.escapeAsBashString(context.getProjectDirectoryRoot().toAbsolutePath().toFile().getPath())),command.getDescription(context));
}
