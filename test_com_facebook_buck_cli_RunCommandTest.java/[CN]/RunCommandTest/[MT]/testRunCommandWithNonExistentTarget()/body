{
  TestConsole console=new TestConsole();
  CommandRunnerParams commandRunnerParams=CommandRunnerParamsForTesting.builder().setConsole(console).build();
  RunCommand runCommand=new RunCommand();
  BuckConfig buckConfig=new FakeBuckConfig();
  RunCommandOptions options=new RunCommandOptions(buckConfig);
  options.setArguments(ImmutableList.of("//does/not/exist"));
  int exitCode=runCommand.runCommandWithOptionsInternal(commandRunnerParams,options);
  assertEquals("",console.getTextWrittenToStdOut());
  String stderrText=console.getTextWrittenToStdErr();
  assertEquals("BUILD FAILED: No build file at does/not/exist/BUCK when resolving target " + "//does/not/exist:exist.\n",stderrText);
  assertEquals(1,exitCode);
}
