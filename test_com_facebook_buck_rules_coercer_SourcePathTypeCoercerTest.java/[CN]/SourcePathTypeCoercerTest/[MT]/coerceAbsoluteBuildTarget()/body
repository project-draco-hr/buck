{
  SourcePath sourcePath=sourcePathTypeCoercer.coerce(buildTargetParser,projectFilesystem,pathRelativeToProjectRoot,"//:hello");
  assertEquals(new BuildTargetSourcePath(projectFilesystem,ImmutableBuildTarget.of(ImmutableUnflavoredBuildTarget.of(Optional.<String>absent(),"//","hello"),ImmutableSortedSet.<Flavor>of())),sourcePath);
}
