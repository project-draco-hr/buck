{
  Path expected=getNdkToolRoot(ndkRoot,targetConfiguration,host.toString()).resolve("bin").resolve((targetConfiguration.getCompiler().getType() == NdkCxxPlatformCompiler.Type.GCC ? targetConfiguration.getToolchainTarget().toString() + "-" : "") + tool);
  Optional<Path> path=executableFinder.getOptionalExecutable(expected,ImmutableMap.<String,String>of());
  Preconditions.checkState(path.isPresent(),expected.toString());
  return path.get();
}
