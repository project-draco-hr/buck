{
  return ImmutableList.of("-isystem",getNdkToolRoot(ndkRoot,targetConfiguration,host).resolve("include").toString(),"-isystem",getNdkToolRoot(ndkRoot,targetConfiguration,host).resolve("lib").resolve(targetConfiguration.getCompiler().getType().getName()).resolve(targetConfiguration.getCompiler().getType() == Compiler.Type.GCC ? targetConfiguration.getToolchainTarget().toString() : "").resolve(targetConfiguration.getCompiler().getVersion()).resolve("include").toString(),"-isystem",getSysroot(ndkRoot,targetConfiguration).resolve("usr").resolve("include").toString(),"-isystem",getSysroot(ndkRoot,targetConfiguration).resolve("usr").resolve("include").resolve("linux").toString());
}
