{
  return new VersionedTool(getToolPath(ndkRoot,targetConfiguration,host,tool),ImmutableList.of("-B" + ndkRoot.resolve("platforms").resolve(targetConfiguration.targetPlatform).resolve("arch-" + targetConfiguration.targetArch).resolve("usr").resolve("lib").toString(),"-L" + getCxxRuntimeDirectory(ndkRoot,targetConfiguration).toString()),tool,targetConfiguration.toolchain.toString() + " " + version+ " "+ cxxRuntime.toString());
}
