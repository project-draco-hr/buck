{
  Map<String,String> entries=getEntriesForSection(sectionName);
  if (!entries.containsKey(propertyName)) {
    return defaultValue;
  }
  String answer=entries.get(propertyName);
switch (answer.toLowerCase()) {
case "yes":
case "true":
    return true;
case "no":
case "false":
  return false;
default :
throw new HumanReadableException("Unknown value for %s in [%s]: %s; should be yes/no true/false!",propertyName,sectionName);
}
}
