{
  Path inferRoot=inferTopLevel.getParent().getParent().getParent();
  Path inferBin=inferRoot.resolve(Paths.get("infer","bin"));
  Path facebookClangPluginsRoot=inferRoot.getParent().resolve("facebook-clang-plugin");
  ProjectWorkspace workspace=TestDataHelper.createProjectWorkspaceForScenario(testCase,"infertest",temporaryFolder);
  workspace.setUp();
  workspace.setUp();
  workspace.writeContentsToPath(String.format("[infer]\n" + "infer_bin = %s\n" + "clang_compiler = %s\n"+ "clang_plugin = %s\n",inferBin.toString(),facebookClangPluginsRoot.resolve(Paths.get("clang","bin","clang")),facebookClangPluginsRoot.resolve(Paths.get("libtooling","build","FacebookClangPlugin.dylib"))),".buckconfig");
  return workspace;
}
