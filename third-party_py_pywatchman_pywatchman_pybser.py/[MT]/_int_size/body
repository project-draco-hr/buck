def _int_size(x):
    'Return the smallest size int that can store the value'
    abs_x = abs(x)
    if (abs_x <= 127):
        return 1
    elif (abs_x <= 32767):
        return 2
    elif (abs_x <= 2147483647):
        return 4
    elif (abs_x <= 9223372036854775807L):
        return 8
    else:
        raise RuntimeException(('Cannot represent value: ' + str(x)))
