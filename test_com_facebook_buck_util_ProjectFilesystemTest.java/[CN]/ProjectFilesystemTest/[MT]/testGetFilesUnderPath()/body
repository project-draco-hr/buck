{
  tmp.newFile("file1");
  tmp.newFolder("dir1");
  tmp.newFile("dir1/file2");
  tmp.newFolder("dir1/dir2");
  tmp.newFile("dir1/dir2/file3");
  assertThat(filesystem.getFilesUnderPath(Paths.get("dir1"),EnumSet.noneOf(FileVisitOption.class),Predicates.<Path>alwaysTrue()),containsInAnyOrder(Paths.get("dir1/file2"),Paths.get("dir1/dir2/file3")));
  assertThat(filesystem.getFilesUnderPath(Paths.get("dir1"),EnumSet.noneOf(FileVisitOption.class),Predicates.equalTo(Paths.get("dir1/dir2/file3"))),containsInAnyOrder(Paths.get("dir1/dir2/file3")));
}
