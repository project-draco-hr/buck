{
  ProcessBuilder builder=new ProcessBuilder();
  builder.directory(filesystem.getRootPath().toAbsolutePath().toFile());
  builder.redirectError(ProcessBuilder.Redirect.PIPE);
  builder.environment().clear();
  builder.environment().putAll(context.getEnvironment());
  builder.environment().put("PWD",shouldSanitizeOutputBinary() ? sanitizer.getExpandedPath(filesystem.getRootPath().toAbsolutePath()) : filesystem.getRootPath().toAbsolutePath().toString());
  return builder;
}
