{
  ShTestRule shTest=createShTestRule(true);
  BuildContext buildContext=createMock(BuildContext.class);
  ExecutionContext executionContext=createMock(ExecutionContext.class);
  EasyMock.expect(executionContext.isDebugEnabled()).andReturn(true);
  replayAll();
  assertTrue("Test run should be required when --debug is passed to `buck test`.",shTest.isTestRunRequired(buildContext,executionContext));
}
