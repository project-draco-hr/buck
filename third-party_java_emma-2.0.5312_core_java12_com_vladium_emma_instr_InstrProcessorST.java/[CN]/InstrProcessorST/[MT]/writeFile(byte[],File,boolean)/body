{
  RandomAccessFile raf=null;
  try {
    if (mkdirs) {
      final File parent=outFile.getParentFile();
      if (parent != null)       parent.mkdirs();
    }
    raf=new RandomAccessFile(outFile,"rw");
    if (DO_RAF_EXTENSION)     raf.setLength(data.length);
    raf.write(data);
  }
  finally {
    if (raf != null)     raf.close();
  }
}
