{
  CxxHeaderSourceSpec spec=getThriftHeaderSourceSpec(params,args,sources);
  ImmutableSortedSet<BuildRule> allDeps=ImmutableSortedSet.<BuildRule>naturalOrder().addAll(deps).addAll((cpp2 ? args.cpp2Deps : args.cppDeps).or(ImmutableSortedSet.<BuildRule>of())).build();
  BuildRuleParams langParams=params.copyWithDeps(allDeps,ImmutableSortedSet.<BuildRule>of());
  return CxxDescriptionEnhancer.createCxxLibraryBuildRules(langParams,resolver,cxxBuckConfig,ImmutableList.<String>of(),ImmutableList.<String>of(),spec.getCxxHeaders(),ImmutableList.<String>of(),spec.getCxxSources(),false);
}
