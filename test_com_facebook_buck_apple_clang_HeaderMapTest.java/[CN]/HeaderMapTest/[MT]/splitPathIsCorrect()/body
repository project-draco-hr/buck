{
  assertThatSplitPathWorksOnPath(Paths.get(""));
  assertThatSplitPathWorksOnPath(Paths.get("."));
  assertThatSplitPathWorksOnPath(Paths.get("/"));
  assertThatSplitPathWorksOnPath(Paths.get("./"));
  assertThatSplitPathWorksOnPath(Paths.get("../."));
  assertThatSplitPathWorksOnPath(Paths.get("./.."));
  assertThatSplitPathWorksOnPath(Paths.get("/asdf/fdgh"));
  assertThatSplitPathWorksOnPath(Paths.get("asdf/fdgh"));
  assertThatSplitPathWorksOnPath(Paths.get("asdf/fdgh/dsfg"));
}
