{
  this.type=Preconditions.checkNotNull(type);
  Preconditions.checkState(sourcePath != null || sourcePathWithFlags != null || sourceGroup != null,"At least one of sourcePath, sourcePathWithFlags, or sourceGroup must be non-null");
  if (sourcePath != null) {
    Preconditions.checkState(sourcePathWithFlags == null && sourceGroup == null,"If sourcePath is non-null, sourcePathWithFlags and sourceGroup must be null");
  }
  if (sourcePathWithFlags != null) {
    Preconditions.checkState(sourcePath == null && sourceGroup == null,"If sourcePathWithFlags is non-null, sourcePath and sourceGroup must be null");
  }
  if (sourceGroup != null) {
    Preconditions.checkState(sourcePath == null && sourcePathWithFlags == null,"If sourceGroup is non-null, sourcePath and sourcePathWithFlags must be null");
  }
  this.sourcePath=sourcePath;
  this.sourcePathWithFlags=sourcePathWithFlags;
  this.sourceGroup=sourceGroup;
}
