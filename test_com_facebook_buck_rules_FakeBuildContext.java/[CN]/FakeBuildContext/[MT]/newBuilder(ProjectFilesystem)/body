{
  ExecutionContext executionContext=TestExecutionContext.newBuilder().setProjectFilesystem(projectFilesystem).build();
  return BuildContext.builder().setStepRunner(new DefaultStepRunner(executionContext,MoreExecutors.sameThreadExecutor())).setProjectFilesystem(projectFilesystem).setBuildEngine(new CachingBuildEngine()).setArtifactCache(new NoopArtifactCache()).setEventBus(BuckEventBusFactory.newInstance()).setBuildDependencies(BuildDependencies.FIRST_ORDER_ONLY).setAndroidBootclasspathForAndroidPlatformTarget(Optional.<AndroidPlatformTarget>absent());
}
