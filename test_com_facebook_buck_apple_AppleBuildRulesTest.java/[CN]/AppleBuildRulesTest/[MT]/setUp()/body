{
  BuckConfig buckConfig=new FakeBuckConfig();
  CxxPlatform cxxPlatform=DefaultCxxPlatforms.build(buckConfig);
  FlavorDomain<CxxPlatform> cxxPlatforms=new FlavorDomain<>("C/C++ Platform",ImmutableMap.of(cxxPlatform.getFlavor(),cxxPlatform));
  appleLibraryDescription=new AppleLibraryDescription(new AppleConfig(buckConfig),new CxxLibraryDescription(new CxxBuckConfig(buckConfig),cxxPlatforms));
}
