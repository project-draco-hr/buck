{
  Path ndkDir=createTmpNdkVersions(NDK_PRE_R11_VERSION_FILENAME,"ndk-dir-old","r9e")[0];
  DefaultAndroidDirectoryResolver resolver=createResolver(Optional.<String>absent(),Optional.<Path>absent(),Optional.of(ndkDir),Optional.<Path>absent());
  assertEquals(ndkDir,resolver.getNdkOrAbsent().get());
  resolver=createResolver(Optional.<String>absent(),Optional.<Path>absent(),Optional.<Path>absent(),Optional.<Path>absent());
  assertEquals(Optional.absent(),resolver.getNdkOrAbsent());
}
