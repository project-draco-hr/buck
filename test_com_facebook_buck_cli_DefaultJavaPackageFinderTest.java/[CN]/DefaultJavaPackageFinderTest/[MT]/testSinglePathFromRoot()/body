{
  DefaultJavaPackageFinder javaPackageFinder=DefaultJavaPackageFinder.createDefaultJavaPackageFinder(ImmutableList.of("/java/"));
  assertEquals("com/example/base/",javaPackageFinder.findJavaPackageFolderForPath("java/com/example/base/"));
  assertEquals("com.example.base",javaPackageFinder.findJavaPackageForPath("java/com/example/base/"));
  assertEquals("com/example/base/",javaPackageFinder.findJavaPackageFolderForPath("java/com/example/base/Base.java"));
  assertEquals("com.example.base",javaPackageFinder.findJavaPackageForPath("java/com/example/base/Base.java"));
  assertEquals("",javaPackageFinder.findJavaPackageFolderForPath("java/Weird.java"));
  assertEquals("",javaPackageFinder.findJavaPackageForPath("java/Weird.java"));
  assertEquals("When there is no match, the project root should be treated as a Java source root.","notjava/",javaPackageFinder.findJavaPackageFolderForPath("notjava/Weird.java"));
  assertEquals("When there is no match, the project root should be treated as a Java source root.","notjava",javaPackageFinder.findJavaPackageForPath("notjava/Weird.java"));
}
