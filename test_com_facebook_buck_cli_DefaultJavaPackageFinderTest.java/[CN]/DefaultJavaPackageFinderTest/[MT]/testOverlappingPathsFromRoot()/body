{
  DefaultJavaPackageFinder javaPackageFinder=DefaultJavaPackageFinder.createDefaultJavaPackageFinder(ImmutableList.of("/java","/java/more/specific","/javatests"));
  assertEquals("com/example/base/",javaPackageFinder.findJavaPackageFolderForPath("java/com/example/base/Base.java"));
  assertEquals("base/",javaPackageFinder.findJavaPackageFolderForPath("java/more/specific/base/Base.java"));
  assertEquals("com/example/base/",javaPackageFinder.findJavaPackageFolderForPath("javatests/com/example/base/BaseTest.java"));
}
