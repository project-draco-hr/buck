{
  Step convertStep=new BashStep("convert","-adaptive-resize",(int)(factor * 100) + "%",Escaper.escapeAsBashString(source),Escaper.escapeAsBashString(destination));
  if (0 != convertStep.execute(getContextWithSilentConsole(context))) {
    throw new HumanReadableException("Cannot scale " + source + " to "+ destination);
  }
}
