def pollForServerReady():
    SERVER_START_POLL = 5
    print 'Waiting for server to start.'
    for _ in range(0, SERVER_START_POLL):
        result = subprocess.call(['curl', '-I', URL_ROOT])
        if (result == 0):
            return
        time.sleep(1)
    print ('Server failed to start after %s seconds.' % SERVER_START_POLL)
