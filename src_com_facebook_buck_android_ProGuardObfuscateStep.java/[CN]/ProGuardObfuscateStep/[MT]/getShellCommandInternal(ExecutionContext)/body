{
  File proguardJar;
  if (proguardJarOverride.isPresent()) {
    proguardJar=context.getProjectFilesystem().getFileForRelativePath(proguardJarOverride.get());
  }
 else {
    AndroidPlatformTarget androidPlatformTarget=context.getAndroidPlatformTarget();
    proguardJar=androidPlatformTarget.getProguardJar();
  }
  ImmutableList.Builder<String> args=ImmutableList.builder();
  args.add("java").add("-Xmx1024M").add("-jar").add(proguardJar.getAbsolutePath()).add("@" + pathToProGuardCommandLineArgsFile);
  return args.build();
}
