{
  Path proguardJar;
  if (proguardJarOverride.isPresent()) {
    proguardJar=context.getProjectFilesystem().getPathForRelativePath(proguardJarOverride.get());
  }
 else {
    AndroidPlatformTarget androidPlatformTarget=context.getAndroidPlatformTarget();
    proguardJar=androidPlatformTarget.getProguardJar();
  }
  ImmutableList.Builder<String> args=ImmutableList.builder();
  args.add("java").add("-Xmx" + proguardMaxHeapSize).add("-jar").add(proguardJar.toString()).add("@" + pathToProGuardCommandLineArgsFile);
  return args.build();
}
