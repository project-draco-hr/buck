{
  String[][] tests={{"C:\\Windows\\","C:\\Windows\\"},{"","\"\""},{" ","\" \""},{"\t","\"\t\""},{"\\","\\"},{"\\\\","\\\\"},{" \\","\" \\\\\""},{"\t\\","\"\t\\\\\""},{"\\\"","\"\\\\\\\"\""},{"\\a\\\"","\"\\a\\\\\\\"\""},{"\\\"a\\\"","\"\\\\\\\"a\\\\\\\"\""},{"\\\"\\\"","\"\\\\\\\"\\\\\\\"\""}};
