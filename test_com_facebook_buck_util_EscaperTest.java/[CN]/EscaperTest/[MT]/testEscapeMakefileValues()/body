{
  assertEquals("hello world",Escaper.escapeAsMakefileValueString("hello world"));
  assertEquals("hello\\#world",Escaper.escapeAsMakefileValueString("hello#world"));
  assertEquals("hello\\\\\\#world",Escaper.escapeAsMakefileValueString("hello\\#world"));
  assertEquals("hello\\world",Escaper.escapeAsMakefileValueString("hello\\world"));
}
