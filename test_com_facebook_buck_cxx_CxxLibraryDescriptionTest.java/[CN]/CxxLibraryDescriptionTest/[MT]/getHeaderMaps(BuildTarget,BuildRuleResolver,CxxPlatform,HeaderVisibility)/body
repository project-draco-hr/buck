{
  if (cxxPlatform.getCpp().resolve(resolver).supportsHeaderMaps() && cxxPlatform.getCxxpp().resolve(resolver).supportsHeaderMaps()) {
    return Optional.<SourcePath>of(new BuildTargetSourcePath(CxxDescriptionEnhancer.createHeaderSymlinkTreeTarget(target,cxxPlatform.getFlavor(),headerVisibility),CxxDescriptionEnhancer.getHeaderMapPath(target,cxxPlatform.getFlavor(),headerVisibility)));
  }
 else {
    return Optional.absent();
  }
}
