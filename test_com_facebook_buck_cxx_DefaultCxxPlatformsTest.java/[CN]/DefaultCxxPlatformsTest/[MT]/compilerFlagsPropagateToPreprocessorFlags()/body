{
  CxxPlatform cxxPlatform=DefaultCxxPlatforms.build(new FakeBuckConfig(ImmutableMap.<String,Map<String,String>>of("cxx",ImmutableMap.of("cflags","-std=gnu11","cppflags","-DCFOO","cxxflags","-std=c++11","cxxppflags","-DCXXFOO"))));
  assertThat(cxxPlatform.getCflags(),containsInAnyOrder("-std=gnu11"));
  assertThat(cxxPlatform.getCppflags(),containsInAnyOrder("-std=gnu11","-DCFOO"));
  assertThat(cxxPlatform.getCxxflags(),containsInAnyOrder("-std=c++11"));
  assertThat(cxxPlatform.getCxxppflags(),containsInAnyOrder("-std=c++11","-DCXXFOO"));
}
