def run_buck(buck, *args):
    logging.info('Running {} {}'.format(buck, ' '.join(args)))
    with tempfile.NamedTemporaryFile() as f:
        if (len(args) > 30):
            for arg in args:
                f.write(arg)
                f.write(os.linesep)
            f.flush()
            args = [('@' + f.name)]
        return subprocess.check_output(([buck] + list(args)))
