{
  final AtomicInteger requestCount=new AtomicInteger(0);
  HttpEndpoint httpEndpoint=new HttpEndpoint(){
    @Override public ListenableFuture<HttpResponse> post(    String content){
      requestCount.incrementAndGet();
      return Futures.immediateFuture(new HttpResponse(""));
    }
  }
;
  HttpScribeLogger logger=new HttpScribeLogger(httpEndpoint,25);
  logger.log("blah",ImmutableList.of("hello world","hello world","hello world"));
  assertEquals(2,requestCount.get());
}
