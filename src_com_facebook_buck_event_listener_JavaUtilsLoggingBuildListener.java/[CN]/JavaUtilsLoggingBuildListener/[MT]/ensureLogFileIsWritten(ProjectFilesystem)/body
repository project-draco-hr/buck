{
  try {
    filesystem.mkdirs(BuckConstant.getScratchPath());
  }
 catch (  IOException e) {
    throw new HumanReadableException(e,"Unable to create output directory: %s",BuckConstant.getScratchDir());
  }
  try {
    FileHandler handler=new FileHandler(filesystem.resolve(BuckConstant.getScratchPath().resolve("build.log")).toString(),false);
    Formatter formatter=new BuildEventFormatter();
    handler.setFormatter(formatter);
    LOG.setUseParentHandlers(false);
    LOG.addHandler(handler);
    LOG.setLevel(LEVEL);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
