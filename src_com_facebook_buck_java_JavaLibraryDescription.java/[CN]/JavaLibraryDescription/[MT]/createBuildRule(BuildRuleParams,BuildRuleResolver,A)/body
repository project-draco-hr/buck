{
  SourcePathResolver pathResolver=new SourcePathResolver(resolver);
  BuildTarget target=params.getBuildTarget();
  if (target.getFlavors().contains(JavaLibrary.SRC_JAR)) {
    return new JavaSourceJar(params,pathResolver,args.srcs.get());
  }
  JavacOptions.Builder javacOptionsBuilder=JavaLibraryDescription.getJavacOptions(resolver,args,defaultOptions);
  AnnotationProcessingParams annotationParams=args.buildAnnotationProcessingParams(target,params.getProjectFilesystem(),resolver);
  javacOptionsBuilder.setAnnotationProcessingParams(annotationParams);
  JavacOptions javacOptions=javacOptionsBuilder.build();
  ImmutableSortedSet<BuildRule> exportedDeps=resolver.getAllRules(args.exportedDeps.get());
  return new DefaultJavaLibrary(params.appendExtraDeps(Iterables.concat(BuildRules.getExportedRules(Sets.union(params.getDeclaredDeps(),exportedDeps)),pathResolver.filterBuildRuleInputs(javacOptions.getInputs()))),pathResolver,args.srcs.get(),validateResources(pathResolver,args,params.getProjectFilesystem()),args.proguardConfig,args.postprocessClassesCommands.get(),exportedDeps,resolver.getAllRules(args.providedDeps.get()),ImmutableSet.<Path>of(),javacOptions,args.resourcesRoot);
}
