{
  SourcePathResolver pathResolver=new SourcePathResolver(resolver);
  BuildTarget target=params.getBuildTarget();
  if (target.getFlavors().contains(JavaLibrary.SRC_JAR)) {
    return new JavaSourceJar(params,pathResolver,args.srcs.get());
  }
  JavacOptions.Builder javacOptions=JavaLibraryDescription.getJavacOptions(resolver,pathResolver,args,defaultOptions);
  AnnotationProcessingParams annotationParams=args.buildAnnotationProcessingParams(target,params.getProjectFilesystem(),resolver);
  javacOptions.setAnnotationProcessingParams(annotationParams);
  ImmutableSortedSet<BuildRule> exportedDeps=resolver.getAllRules(args.exportedDeps.get());
  return new DefaultJavaLibrary(params.appendExtraDeps(BuildRules.getExportedRules(Sets.union(params.getDeclaredDeps(),exportedDeps))),pathResolver,args.srcs.get(),validateResources(pathResolver,args,params.getProjectFilesystem()),args.proguardConfig,args.postprocessClassesCommands.get(),exportedDeps,resolver.getAllRules(args.providedDeps.get()),ImmutableSet.<Path>of(),javacOptions.build(),args.resourcesRoot);
}
