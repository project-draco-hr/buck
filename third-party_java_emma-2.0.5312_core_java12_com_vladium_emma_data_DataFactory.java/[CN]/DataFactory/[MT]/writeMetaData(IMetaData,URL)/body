{
  final URLConnection connection=url.openConnection();
  connection.setDoOutput(true);
  OutputStream out=null;
  try {
    out=connection.getOutputStream();
    writeMetaData(data,out);
    out.flush();
  }
  finally {
    if (out != null)     try {
      out.close();
    }
 catch (    Exception ignore) {
    }
  }
}
