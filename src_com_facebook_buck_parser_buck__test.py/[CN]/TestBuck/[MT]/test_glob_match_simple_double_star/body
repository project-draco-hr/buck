def test_glob_match_simple_double_star(self):
    pattern = '**'
    self.run_test_glob_match_both_ways(True, pattern, '')
    self.run_test_glob_match_both_ways(True, pattern, '/')
    self.run_test_glob_match_both_ways(True, pattern, 'src')
    self.run_test_glob_match_both_ways(True, pattern, '/src')
