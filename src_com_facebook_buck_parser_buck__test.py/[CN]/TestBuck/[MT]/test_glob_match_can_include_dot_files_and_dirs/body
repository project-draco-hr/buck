def test_glob_match_can_include_dot_files_and_dirs(self):
    all_java_tests = '**/*Test.java'
    self.run_test_glob_match_both_ways(True, all_java_tests, 'path/to/MyJavaTest.java', wantdots=True)
    self.run_test_glob_match_both_ways(True, all_java_tests, 'path/to/.MyJavaTest.java', wantdots=True)
    self.run_test_glob_match_both_ways(True, all_java_tests, 'path/.to/MyJavaTest.java', wantdots=True)
    self.run_test_glob_match_both_ways(True, all_java_tests, './path/to/MyJavaTest.java', wantdots=True)
