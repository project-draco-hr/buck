def run_test_glob_match_both_ways(self, result, pattern, path, wantdots=False):
    self.assertEqual(result, glob_match(pattern, path, wantdots=wantdots), ("glob_match('%s', '%s', wantdots=%s) should be %s" % (pattern, path, wantdots, result)))
    self.assertEqual(result, self.glob_match_using_glob_walk(pattern, path, wantdots=wantdots), ("glob_match_using_glob_walk('%s', '%s', wantdots=%s) should be %s" % (pattern, path, wantdots, result)))
