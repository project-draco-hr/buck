{
  try {
    if (shouldRecurse) {
      if (shouldForceDeletion) {
        filesystem.deleteRecursivelyIfExists(toDelete);
      }
 else {
        filesystem.deleteRecursively(toDelete);
      }
    }
 else {
      if (shouldForceDeletion) {
        filesystem.deleteFileAtPathIfExists(toDelete);
      }
 else {
        filesystem.deleteFileAtPath(toDelete);
      }
    }
  }
 catch (  IOException e) {
    LOG.error(e);
    return 1;
  }
  return 0;
}
