{
  ImmutableList.Builder<String> args=ImmutableList.builder();
  args.add("rm");
  if (shouldRecurse) {
    args.add("-r");
  }
  if (shouldForceDeletion) {
    args.add("-f");
  }
  Path absolutePath=context.getProjectFilesystem().resolve(patternToDelete);
  args.add(absolutePath.toString());
  return args.build();
}
