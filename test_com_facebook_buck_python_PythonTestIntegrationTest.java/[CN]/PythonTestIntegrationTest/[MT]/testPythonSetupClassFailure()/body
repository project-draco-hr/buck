{
  assumePythonVersionIsAtLeast("2.7","`setUpClass` support was added in Python-2.7");
  ProjectWorkspace.ProcessResult result=workspace.runBuckCommand("test","//:test-setup-class-failure");
  result.assertSpecialExitCode("Tests should execute successfully but fail.",42);
  assertThat(result.getStderr(),containsString("FAILURE test_setup_class_failure.Test test_that_passes: Exception: setup failure!"));
}
