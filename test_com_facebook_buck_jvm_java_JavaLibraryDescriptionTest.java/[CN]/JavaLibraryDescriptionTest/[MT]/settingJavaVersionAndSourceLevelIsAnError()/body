{
  JavaLibraryDescription.Arg arg=new JavaLibraryDescription(defaults).createUnpopulatedConstructorArg();
  populateWithDefaultValues(arg);
  arg.source=Optional.of("1.4");
  arg.target=Optional.absent();
  arg.javaVersion=Optional.of("1.4");
  try {
    JavaLibraryDescription.getJavacOptions(resolver,arg,defaults).build();
    fail();
  }
 catch (  HumanReadableException e) {
    assertTrue(e.getMessage(),e.getHumanReadableErrorMessage().contains("either source and target or java_version"));
  }
}
