{
  PythonPlatform platform1=PythonPlatform.of(ImmutableFlavor.of("pyPlat1"),new PythonEnvironment(Paths.get("python2.6"),PythonVersion.of("2.6")),Optional.<BuildTarget>absent());
  PythonPlatform platform2=PythonPlatform.of(ImmutableFlavor.of("pyPlat2"),new PythonEnvironment(Paths.get("python2.7"),PythonVersion.of("2.7")),Optional.<BuildTarget>absent());
  PythonBinaryBuilder builder=PythonBinaryBuilder.create(BuildTargetFactory.newInstance("//:bin"),FlavorDomain.of("Python Platform",platform1,platform2));
  builder.setMainModule("main");
  PythonBinary binary1=(PythonBinary)builder.setPlatform(platform1.getFlavor().toString()).build(new BuildRuleResolver(TargetGraph.EMPTY,new BuildTargetNodeToBuildRuleTransformer()));
  assertThat(binary1.getPythonPlatform(),Matchers.equalTo(platform1));
  PythonBinary binary2=(PythonBinary)builder.setPlatform(platform2.getFlavor().toString()).build(new BuildRuleResolver(TargetGraph.EMPTY,new BuildTargetNodeToBuildRuleTransformer()));
  assertThat(binary2.getPythonPlatform(),Matchers.equalTo(platform2));
}
