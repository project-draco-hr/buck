{
  buildableContext.recordArtifact(output);
  Path argFilePath=getProjectFilesystem().getRootPath().resolve(BuildTargets.getScratchPath(getBuildTarget(),"%s__argfile.txt"));
  return ImmutableList.of(new MkdirStep(getProjectFilesystem(),output.getParent()),new CxxPrepareForLinkStep(argFilePath,output,FluentIterable.from(args).transform(Arg.stringifyFunction()).toList(),getLibrarySearchDirectories(),getLibraryNames()),new CxxLinkStep(getProjectFilesystem().getRootPath(),linker.getCommandPrefix(getResolver()),argFilePath),new FileScrubberStep(getProjectFilesystem(),output,linker.getScrubbers(getProjectFilesystem().getRootPath())));
}
