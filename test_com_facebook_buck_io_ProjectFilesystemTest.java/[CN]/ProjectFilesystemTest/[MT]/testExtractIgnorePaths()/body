{
  Config config=ConfigBuilder.createFromText("[project]","ignore = .git, foo, bar/, baz//, a/b/c");
  Path rootPath=tmp.getRoot();
  ImmutableSet<Path> ignorePaths=new ProjectFilesystem(rootPath,config).getIgnorePaths();
  assertEquals("Should ignore paths, sans trailing slashes",ImmutableSet.of(BuckConstant.BUCK_OUTPUT_PATH,Paths.get(".idea"),Paths.get(System.getProperty(ProjectFilesystem.BUCK_BUCKD_DIR_KEY,".buckd")),Paths.get(BuckConstant.DEFAULT_CACHE_DIR),Paths.get(".git"),Paths.get("foo"),Paths.get("bar"),Paths.get("baz"),Paths.get("a/b/c")),ignorePaths);
}
