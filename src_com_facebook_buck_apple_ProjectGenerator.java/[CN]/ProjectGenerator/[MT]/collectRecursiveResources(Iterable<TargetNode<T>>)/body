{
  return FluentIterable.from(targetNodes).transformAndConcat(newRecursiveRuleDependencyTransformer(AppleBuildRules.RecursiveDependenciesMode.COPYING,ImmutableSet.of(AppleResourceDescription.TYPE))).transform(new Function<TargetNode<?>,AppleResourceDescription.Arg>(){
    @Override public AppleResourceDescription.Arg apply(    TargetNode<?> input){
      return (AppleResourceDescription.Arg)input.getConstructorArg();
    }
  }
).toSet();
}
