{
  BuckConfig buckConfig=FakeBuckConfig.builder().build();
  ImmutableMap<AppleSdk,AppleSdkPaths> sdkPaths=discoverSystemSdkPaths(buckConfig);
  Optional<AppleSdk> anySdkOptional=anySdkForPlatform(platform,sdkPaths);
  if (!anySdkOptional.isPresent()) {
    return false;
  }
  AppleSdk anySdk=anySdkOptional.get();
  AppleCxxPlatform appleCxxPlatform=AppleCxxPlatforms.build(anySdk,"fakeversion","fakearch",sdkPaths.get(anySdk),buckConfig);
  return appleCxxPlatform.getSwift().isPresent() && appleCxxPlatform.getSwiftStdlibTool().isPresent();
}
