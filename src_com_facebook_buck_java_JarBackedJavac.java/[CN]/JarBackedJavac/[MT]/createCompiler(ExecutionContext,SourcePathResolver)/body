{
  ClassLoaderCache classLoaderCache=context.getClassLoaderCache();
  ClassLoader compilerClassLoader=classLoaderCache.getClassLoaderForClassPath(ClassLoader.getSystemClassLoader(),ImmutableList.of(resolver.getPath(javacJar)));
  try {
    return (JavaCompiler)compilerClassLoader.loadClass("com.sun.tools.javac.api.JavacTool").newInstance();
  }
 catch (  ClassNotFoundException|IllegalAccessException|InstantiationException ex) {
    throw new RuntimeException(ex);
  }
}
