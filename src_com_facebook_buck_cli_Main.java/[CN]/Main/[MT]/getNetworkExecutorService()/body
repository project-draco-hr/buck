{
  ThreadPoolExecutor networkExecutor=new ThreadPoolExecutor(MAX_NETWORK_THREADS,MAX_NETWORK_THREADS,500L,TimeUnit.MILLISECONDS,new LinkedBlockingQueue<Runnable>(MAX_NETWORK_THREADS),new ThreadFactoryBuilder().setNameFormat("Network I/O" + "-%d").build(),new ThreadPoolExecutor.CallerRunsPolicy());
  networkExecutor.allowCoreThreadTimeOut(true);
  return listeningDecorator(networkExecutor);
}
