{
  Path resourcesRoot=Paths.get("java/example/resources");
  ResourcesRootPackageFinder finder=new ResourcesRootPackageFinder(resourcesRoot,new FakeJavaPackageFinder());
  assertEquals("com/facebook/",finder.findJavaPackageFolderForPath("java/example/resources/com/facebook/bar.txt"));
  assertEquals("com.facebook",finder.findJavaPackageForPath("java/example/resources/com/facebook/bar.txt"));
}
