{
  Optional<Path> androidSdkDir=PropertyFinder.findDirectoryByPropertiesThenEnvironmentVariable(projectFilesystem,"sdk.dir","ANDROID_SDK","ANDROID_HOME");
  if (androidSdkDir.isPresent()) {
    Preconditions.checkArgument(androidSdkDir.get().toFile().isDirectory(),"The location of your Android SDK %s must be a directory",androidSdkDir.get());
  }
  return androidSdkDir;
}
