{
  if (totalSizeFilter.isPresent()) {
    int limitIndex=0;
    long totalSize=0;
    for (    Path path : paths) {
      totalSize+=Files.size(path);
      if (totalSize < totalSizeFilter.get()) {
        limitIndex++;
      }
 else {
        break;
      }
    }
    paths=subSet(paths,filterMode,limitIndex);
  }
  return paths;
}
