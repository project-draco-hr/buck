{
  ProjectWorkspace workspace=TestDataHelper.createProjectWorkspaceForScenario(this,"project_slice_with_project_in_different_buck_file",temporaryFolder);
  workspace.setUp();
  ProcessResult result=workspace.runBuckCommand("project","//:root");
  result.assertSuccess("buck project should exit cleanly");
  workspace.verify();
  assertEquals("`buck project` should report the files it modified.",Joiner.on('\n').join("MODIFIED FILES:",".idea/compiler.xml",".idea/modules.xml",".idea/runConfigurations/Debug_Buck_test.xml","module_.iml","modules/module_modules_dep1.iml") + '\n',result.getStdout());
  assertThat("`buck project` should contain warning to restart IntelliJ.",result.getStderr(),containsString("  ::  Please close and re-open IntelliJ."));
}
