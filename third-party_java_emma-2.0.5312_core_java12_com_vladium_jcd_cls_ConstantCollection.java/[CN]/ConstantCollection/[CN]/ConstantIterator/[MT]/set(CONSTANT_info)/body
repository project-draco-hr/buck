{
  final int zindex=m_prev_index - 1;
  final CONSTANT_info result=(CONSTANT_info)m_constants.get(zindex);
  if (result == null)   throw new IllegalStateException("assertion failure: dereferencing an invalid constant pool slot " + m_prev_index);
  if (result.width() != constant.width())   throw new IllegalArgumentException("assertion failure: can't set entry of type [" + result.getClass().getName() + "] to an entry of type ["+ result.getClass().getName()+ "] at pool slot "+ m_prev_index);
  m_constants.set(zindex,constant);
  return result;
}
