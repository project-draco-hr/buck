def write_misc_file(java_settings):
    'Writes a misc.xml file to define some settings specific to the project.'
    xml = (MISC_XML % {'java_language_level': get_value_in_map(java_settings, 'languageLevel'), 'project_jdk_name': get_value_in_map(java_settings, 'jdkName'), 'project_jdk_type': get_value_in_map(java_settings, 'jdkType'), })
    write_file_if_changed('.idea/misc.xml', xml)
