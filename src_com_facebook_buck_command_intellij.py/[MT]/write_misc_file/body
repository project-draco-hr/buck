def write_misc_file(java_settings):
    'Writes a misc.xml file to define some settings specific to the project.'
    xml = (MISC_XML % {'java_language_level': java_settings.get('languageLevel', 'JDK_1_6'), 'project_jdk_name': java_settings.get('jdkName', 'Android API 21 Platform'), 'project_jdk_type': java_settings.get('jdkType', 'Android SDK'), })
    write_file_if_changed('.idea/misc.xml', xml)
