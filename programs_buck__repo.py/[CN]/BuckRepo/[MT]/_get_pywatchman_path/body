def _get_pywatchman_path(self):
    pywatchman_dir = self._join_buck_dir('build/pywatchman')
    eggs = glob.glob(os.path.join(pywatchman_dir, '*.egg'))
    if eggs:
        if (len(eggs) > 1):
            raise BuckToolException(textwrap.dedent("                ::: Multiple .egg archives found in '{0}': {1}.\n                ::: Please rm -rf {0} and try again.".format(pywatchman_dir, eggs)))
        return eggs[0]
    else:
        return pywatchman_dir
