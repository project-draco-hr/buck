{
  try {
    LOG.debug("Checking if Thrift is available..");
    InputStream output=BgProcessKiller.startProcess(new ProcessBuilder("thrift","-version")).getInputStream();
    byte[] bytes=new byte[7];
    output.read(bytes);
    boolean available=(new String(bytes)).equals("Thrift ");
    LOG.debug("Thrift available: %s",available);
    return available;
  }
 catch (  IOException e) {
    return false;
  }
}
