{
  StringBuilder args=new StringBuilder("zip ");
  args.append("-X ");
  args.append("-r ");
  args.append("-").append(compressionLevel).append(" ");
  if (junkPaths) {
    args.append("-j ");
  }
  args.append(absolutePathToZipFile).append(" ");
  if (paths.isEmpty()) {
    args.append("-i* ");
    args.append(". ");
  }
 else {
    for (    String path : paths) {
      args.append(path).append(" ");
    }
  }
  return args.toString();
}
