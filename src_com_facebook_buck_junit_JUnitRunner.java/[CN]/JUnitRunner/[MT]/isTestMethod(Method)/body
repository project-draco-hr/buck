{
  if (method.getAnnotation(Ignore.class) != null) {
    return false;
  }
  if (method.getAnnotation(Test.class) != null) {
    return true;
  }
  Class<?> declaringClass=method.getDeclaringClass();
  return (TestCase.class.isAssignableFrom(declaringClass) && method.getName().startsWith("test") && method.getParameterTypes().length == 0 && method.getReturnType().equals(Void.TYPE));
}
