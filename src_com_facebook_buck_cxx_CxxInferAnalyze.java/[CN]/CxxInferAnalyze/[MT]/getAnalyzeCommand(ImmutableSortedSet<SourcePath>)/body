{
  ImmutableList.Builder<String> commandBuilder=ImmutableList.builder();
  commandBuilder.addAll(inferTools.topLevel.getCommandPrefix(getResolver())).add("--project_root",getProjectFilesystem().getRootPath().toString()).add("--out",resultsDir.toString());
  for (  SourcePath specDir : specsDirs) {
    commandBuilder.add("--specs-dir",getResolver().getAbsolutePath(specDir).toString());
  }
  commandBuilder.add("--","analyze");
  return commandBuilder.build();
}
